<script src="/frontend/scripts/perfil_empreiteira.js"></script>
<script>
    const cnae=document.querySelector('#cnae_empreiteira')

    cnae.addEventListener('keypress', () => {
        let inputlength = cnae.value.length
        
        if (inputlength === 4 ){
            cnae.value += '-' 
        } 
        else if (inputlength===6){
            cnae.value += '/'
        }
    })
</script>