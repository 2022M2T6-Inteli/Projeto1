<%- include("../structures/menu.ejs") %>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<script src="../../frontend/scripts/feed.js"></script>


<style>
    *{
    margin: 0;
    padding: 0;
    font-family: 'Noto Sans', sans-serif;
    box-sizing: border-box;
    }
    body{
        background-color: antiquewhite;
    }
    :root{
    /* - Color palette - */
    --blue1: #93b1cb;
    --blue2: #85a7c5;
    --blue3: #789ebf;
    --greenA1: #568f6a;
    --greenA2: #428157;
    --greenA3: #006b3f;
    --greenB1: #8fe094;
    --greenB2: #81dc87;
    --greenB3: #73d97a;
    --yellowA01: #ffd375;
    --yellowA1: #ffc546;
    --yellowA2: #ffbe2f;
    --yellowA3: #ffb719;
    --yellowB01: #ffb97a;
    --yellowB1: #ffa24e;
    --yellowB2: #ff9638;
    --yellowB3: #ff8b22;
    }


    .post-box{
    border-radius: 20px;
    width: 400px;
    height: 500px;
    text-align: center;
    display: flex;
    flex-wrap: wrap;
    padding-top:0px;
    background-color: white;
    }

    .grid-container{
        display: grid;
        grid-template-columns:100%;
        height: 100%;
        margin-top:30px;
    }
    .grid-item{
        padding-top: 5%;

    }
    .info{
        width: 50%;
        height: 150px;
        border: solid var(--yellowA2);
        text-align: center;
        display: absolute;

    }
    #title{
        background-color: #006b3f;
        color:white;
        width: 100%;
        top:0px;
        border-radius: 15px 15px 0px 0px;
        padding-top: 5%;
    }
    .buttons{
        width: 100%;
        display:block;
        text-align: center;
        background: url(../public/icones/heart-full.png);
        height:40px

    }
    .prop{
        padding-top: 5px;
        display:none;
        border: solid var(--yellowA2);
        width: 100%;
        border-radius: 0px 0px 15px 15px;
    }
    .like{
        height:40px;
        width: 40px;
        background: none;
        border: 0px;
        font-size: 32px;
    }
    #proposta{
        height: 100px;
        margin-left: 10px;
        padding: 5px;
        margin-right:10px;
        width: 300px;

        
    }
    #desc{
        width: 100%;
        border: solid var(--yellowA2);
        padding-bottom: 0px;
        border-bottom: 0px;
        padding-top: 10px;
    }
</style>
<script>
    function like(i){  
        var x = document.getElementById("prop"+`${i}`);
        if (x.style.display === "none") {
            x.style.display = "block";
        } else if(x.style.display === "block") {
            x.style.display = "none";
        } else{
            x.style.display = "block";
        }

    }
</script>
<div class="grid-container" id="resultado"> 
        
</div>