<!DOCTYPE html>
<html lang="en">
<!-- Chamando css, jquery e script -->
  <head>
    <title>Feed</title>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/frontend/views/css/feed.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="../../frontend/scripts/feed.js"></script>
  </head>
<!-- Modal de enviar proposta -->
  <div id="modal" class="modal">
    <div class="modal_content">
       <h2 class="modal_title">Enviar proposta</h2>
       <div class="modal_description">
        <form id="formulario_proposta" name="formulario_proposta" method="post" action="/feed/proposta">
            <p>Valor:</p>
            <input type="text" name="valor_op" id="valor_op" value="R$0.000,00">
            <p>Descrição:</p>
            <input type="text" name="escopo_op" id="escopo_op" value="Elabore sua proposta" ></input>
            <input type="text" name="id_post" id="id_post" value="" hidden></input>
            <input type="text" name="id_emp" id="id_emp" value="" hidden></input><br>
            <input type="text" name="id_contrat" id="id_contrat" value="" hidden></input><br>
            <div id="modal_buttons">
              <a href="#" class="close_button">Fechar</a>
              <input type="submit" name="button_enviar" id="button_enviar" class="send_button" value="Enviar" onclick="">
            </div>

        </form>
            
      </div>
   </div>
</div>


<!-- Modal de confirmação -->

<div id="modal_conf" class="modal">
    <div class="modal_content">
       <h2 class="modal_title">Proposta enviada com sucesso</h2>
        <div id="modal_buttons_responsavel">
            <a href="#" class="close_button">Fechar</a>
        </div>
   </div>
</div>
<!-- Importando sidebar, header, footer e posts-->
  <body>
    <%- include("../structures/menu.ejs")%>
    <div class="grid-container" id="resultado"></div>
    <%- include("../structures/faq.ejs")%>
    <%- include("../structures/footer.ejs")%>
  </body>

</html>